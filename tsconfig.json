{
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./lib",
      "moduleResolution": "node", 
      "declaration": true,
      "declarationDir": "./lib/types"
  },
  
}